{
  "name": "query-deps",
  "version": "1.0.0",
  "description": "GitHub Action to gate CI with vlt query selectors",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 --format=cjs --minify",
    "build:dev": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 --format=cjs --sourcemap",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vltpkg/action-query-deps.git"
  },
  "keywords": ["vlt", "github-action", "security", "dependencies", "malware", "outdated"],
  "author": "vltpkg",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}